					<!--<serviceDebug includeExceptionDetailInFaults="false" />-->
				</behavior>
			</serviceBehaviors>
			<!-- Begin Addition-->
			<endpointBehaviors>
				<behavior name="Web">
					<webHttp />
				</behavior>
			</endpointBehaviors>
			<!-- End Addition-->
		</behaviors>
		<!-- Begin Addition-->
		<services>
			<!--<service behaviorConfiguration="customBehaviour" name="MRNNexus_Service.MRNNexus_Service">
